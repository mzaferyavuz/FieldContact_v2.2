@model  UI.MVC.FieldContact.PageModel.Management.CompEmployeeModel

    @section CssFiles
{
        <link href="/Content/global/plugins/datatables/datatables.min.css" rel="stylesheet" />
        <link href="/Content/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" />
    }

    @section JsFiles
{
        <script src="/Content/global/plugins/datatables/datatables.min.js"></script>
        <script src="/Content/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js"></script>
        <script src="/Scripts/Management/Management_CompEmployees.js?@DateTime.Now"></script>
        <script src="/Content/global/scripts/datatable.js"></script>
        <script src="/Content/pages/scripts/table-datatables-responsive.js"></script>
    }




    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN Portlet PORTLET-->
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-green-sharp">
                        <i class="icon-speech font-green-sharp"></i>
                        <span class="caption-subject bold uppercase">Müşteri Personel</span>
                        <span class="caption-helper">Müşteri personeli bilgileri düzenleme sayfası...</span>
                    </div>
                    <div class="actions">
                        <a data-toggle="modal" href="#responsive" class="newButton btn btn-circle btn-default btn-sm">
                            <i class="fa fa-plus"></i> Ekle
                        </a>
                        <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;"> </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover" id="compEmpList">
                        <thead>
                            <tr>
                                <th class="all">Ad</th>
                                <th class="all">Soyad</th>
                                <th class="all">Telefon</th>
                                <th class="all"> E-Mail</th>
                                <th class="all">Firması</th>
                                <th class="all"> Görevi</th>
                                <th class="all">İşlem</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                    <br />
                    <br />
                </div>
            </div>
            <!-- END Portlet PORTLET-->
        </div>
    </div>

    <div id="responsive" class="modal fade" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">Müşteri Çalışanı Düzenleme</h4>
                </div>
                <input type="hidden" id="id" />
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @*<label>Proje Adı</label>*@
                                <input id="name" type="text" class="form-control" placeholder="Adı">
                            </div>
                            <div class="form-group">
                                @*<label>Proje Adı</label>*@
                                <input id="lastname" type="text" class="form-control" placeholder="Soyadı">
                            </div>
                            <div class="form-group">
                                <label> E-Mail</label>
                                <input id="emailAdd" type="text" class="form-control" placeholder="example@exaple.com">
                            </div>
                            <div class="form-group">
                                <label> Şirket</label>
                                <select id="span_small" class="form-control select2 col-md-12 compSelection">
                                    <optgroup label="Kayıtlı Firmalar">


                                        @for (int i = 0; i < Model.Companies.Count; i++)
                                        {
                                            <option value="@Model.Companies[i].ID ">@Model.Companies[i].Name</option>
                                        }
                                    </optgroup>
                                </select>
                            </div>
                            <div class="form-group">
                                <label> Cep Telefonu</label>
                                <input id="phone" type="text" class="form-control" placeholder="Cep Telefonu">
                            </div>
                            <div class="form-group">
                                <label>Görevi</label>
                                <input id="title" type="text" class="form-control" placeholder="Açlıştığı Pozisyon\Görevi">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn dark btn-outline">Close</button>
                    <button type="button" class="btn green" id="saveChanges">Save changes</button>
                </div>
            </div>
        </div>
    </div>


    <div id="responsiveUpdate" class="modal fade" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">Müşteri Çalışanı Düzenleme</h4>
                </div>
                <input type="hidden" id="id" />
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @*<label>Proje Adı</label>*@
                                <input id="nameEdit" type="text" class="form-control" placeholder="Adı">
                            </div>
                            <div class="form-group">
                                @*<label>Proje Adı</label>*@
                                <input id="lastnameEdit" type="text" class="form-control" placeholder="Soyadı">
                            </div>
                            <div class="form-group">
                                <label> E-Mail</label>
                                <input id="emailAddEdit" type="text" class="form-control" placeholder="example@exaple.com">
                            </div>
                            <div class="form-group">
                                <label> Şirket</label>
                                <input id="company" type="text" class="form-control">
                            </div>
                            <div class="form-group">
                                <label> Cep Telefonu</label>
                                <input id="phoneEdit" type="text" class="form-control" placeholder="Cep Telefonu">
                            </div>
                            <div class="form-group">
                                <label>Görevi</label>
                                <input id="titleEdit" type="text" class="form-control" placeholder="Açlıştığı Pozisyon\Görevi">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn dark btn-outline">Close</button>
                    <button type="button" class="btn green" id="saveChangesEdit">Save changes</button>
                </div>
            </div>
        </div>
    </div>