<div class="row">
    <div class="col-md-12">
        <!-- BEGIN Portlet PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-green-sharp">
                    <i class="icon-speech font-green-sharp"></i>
                    <span class="caption-subject bold uppercase"> Personel</span>
                    <span class="caption-helper">personel bilgileri düzenleme sayfası...</span>
                </div>
                <div class="actions">
                    <a data-toggle="modal" href="#responsive" class="newButton btn btn-circle btn-default btn-sm">
                        <i class="fa fa-plus"></i> Ekle
                    </a>
                    <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;"> </a>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover dt-responsive" id="empList">
                    <thead>
                        <tr>
                            <th class="all">Ad</th>
                            <th class="all">Soyad</th>
                            <th class="none">İşe Giriş Tarihi</th>
                            <th class="none">Doğum Tarihi</th>
                            <th class="none">Kişisel Telefon</th>
                            <th class="none">Şirket Telefon</th>
                            <th class="none">Net Maaş</th>
                            <th class="none">Mail Adresi</th>
                            <th class="all">İşlem</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
        <!-- END Portlet PORTLET-->
    </div>
</div>

<div id="responsive" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Çalışan Düzenleme</h4>
            </div>
            <input type="hidden" id="id" />
            <input type="hidden" id="opType" />
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @*<label>Proje Adı</label>*@
                            <input id="name" type="text" class="form-control" placeholder="Adı">
                        </div>
                        <div class="form-group">
                            @*<label>Proje Adı</label>*@
                            <input id="lastname" type="text" class="form-control" placeholder="Soyadı">
                        </div>
                        <div class="form-group">
                            <input id="hireDate" class="form-control form-control-inline input-medium date-picker" size="16" type="text" value="" />
                            <span class="help-block"> İşe Giriş Tarihi </span>
                        </div>
                        <div class="form-group">
                            <input id="birthDate" class="form-control form-control-inline input-medium date-picker" size="16" type="text" value="" />
                            <span class="help-block"> Doğum Tarihi </span>
                        </div>
                        <div class="form-group">
                            <label>Telefon Numarası</label>
                            <input id="personalPhone" type="text" class="form-control" placeholder="Başında '0' olmadan giriniz">
                        </div>
                        <div class="form-group">
                            <label>Şirket Numarası</label>
                            <input id="compPhone" type="text" class="form-control" placeholder="Başında '0' olmadan giriniz">
                        </div>
                        <div class="form-group">
                            <input id="salary" type="text" class="form-control" placeholder="Net Maaş">
                        </div>
                        <div class="form-group">
                            <input id="position" type="text" class="form-control" placeholder="ornek@scsotomasyon.com">
                        </div>
                        <label class="mt-checkbox mt-checkbox-outline">
                            Admin
                            <input type="checkbox" value="1" name="authBoxes" />
                            <span></span>
                        </label>
                        <label class="mt-checkbox mt-checkbox-outline">
                            FieldStuffs
                            <input type="checkbox" value="2" name="authBoxes" />
                            <span></span>
                        </label>
                        <label class="mt-checkbox mt-checkbox-outline">
                            Schedule Attender
                            <input type="checkbox" value="3" name="authBoxes" />
                            <span></span>
                        </label>
                        <label class="mt-checkbox mt-checkbox-outline">
                            Project Management
                            <input type="checkbox" value="4" name="authBoxes" />
                            <span></span>
                        </label>
                        <label class="mt-checkbox mt-checkbox-outline">
                            Araç Düzenleme
                            <input type="checkbox" value="5" name="authBoxes" />
                            <span></span>
                        </label>
                        <label class="mt-checkbox mt-checkbox-outline">
                            Masraf Düzenleme
                            <input type="checkbox" value="6" name="authBoxes" />
                            <span></span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn dark btn-outline">Close</button>
                <button type="button" class="btn green" id="saveChanges">Save changes</button>
            </div>
        </div>
    </div>
</div>