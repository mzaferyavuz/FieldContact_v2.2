@model UI.MVC.FieldContact.PageModel.Orders.OrderRequestModel

@section CssFiles
{
    <link href="/Content/global/plugins/datatables/datatables.min.css" rel="stylesheet" />
    <link href="/Content/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" />
    <link href="/Content/global/plugins/select2/css/select2.min.css" rel="stylesheet" type="text/css" />
    <link href="/Content/global/plugins/select2/css/select2-bootstrap.min.css" rel="stylesheet" type="text/css" />
}

@section JsFiles
{
    <script src="/Content/global/plugins/datatables/datatables.min.js"></script>
    <script src="/Content/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js"></script>
    <script src="/Content/global/scripts/datatable.js"></script>
    <script src="/Content/pages/scripts/table-datatables-responsive.js"></script>
    <script src="/Scripts/Order/Order_Index.js?@DateTime.Now"></script>
    <script src="/Content/global/plugins/select2/js/select2.full.min.js" type="text/javascript"></script>
    <script src="/Content/pages/scripts/components-select2.min.js" type="text/javascript"></script>
}


<div class="row">
    <div class="col-md-12">
        <!-- BEGIN Portlet PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-green-sharp">
                    <i class="icon-speech font-green-sharp"></i>
                    <span class="caption-subject bold uppercase"> Siparişler</span>
                    <span class="caption-helper">sipariş isteği ekleme-çıkarma ve düzenleme sayfası...</span> <br /><br />
                    <span class="caption-helper">
                        Bu bölümden, projeler üzerinde doğrudan değişiklik yapma yetkisi olayan kişilerin
                        sahada sipariş edilen veya iletilen malzemelerin bildirimi yapılır. Buradan yetkili kişi siparişi onayladığında projeye otomatik eklenir
                        veya düzenleme yaptıktan sonra onaylayabilir yada siparişi iptal etmek için silebilir.
                    </span>
                </div>
                <div class="actions">
                    <a data-toggle="modal" href="#responsive" class="newButton btn btn-circle btn-default btn-sm">
                        <i class="fa fa-plus"></i> Ekle
                    </a>
                    <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;"> </a>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover" id="prodList">
                    <thead>
                        <tr>
                            <th>Ürün Adı</th>
                            <th>Firma-Şantiye</th>
                            <th>Adet</th>
                            <th>Talep Açan</th>
                            <th>İşlem </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
        <!-- END Portlet PORTLET-->
    </div>
</div>

<div id="responsive" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Kategori İşlem</h4>
            </div>
            <input type="hidden" id="id" />
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <select id="span_small" class="form-control select2 productSelection">
                                <optgroup label="Ürün Seç">


                                    @for (int i = 0; i < Model.Products.Count; i++)
                                    {
                                        <option value="@Model.Products[i].ID">@Model.Products[i].Name</option>
                                    }
                                </optgroup>
                            </select>
                        </div>
                        <div class="form-group">
                            <select id="span_small" class="form-control select2 companySelection">
                                <optgroup label="Şantiye Seç">


                                    @for (int i = 0; i < Model.Companies.Count; i++)
                                    {
                                        <option value="@Model.Companies[i].ID">@Model.Companies[i].Name</option>
                                    }
                                </optgroup>
                            </select>
                        </div>
                        <div class="form-group">

                            <input id="quanytity" type="text" class="form-control" placeholder="Adet">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn dark btn-outline">Close</button>
                <button type="button" class="btn green" id="saveChanges">Save changes</button>
            </div>
        </div>
    </div>
</div>



<div id="responsiveEdit" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Kategori İşlem</h4>
            </div>
            <input type="hidden" id="id" />
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input id="productItem" type="text" class="form-control" value="">
                        </div>
                        <div class="form-group">
                            <input id="companyItem" type="text" class="form-control" value="">
                        </div>
                        <div class="form-group">
                            <input id="quantityEdit" type="text" class="form-control" value="">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn dark btn-outline">Close</button>
                <button type="button" class="btn green" id="saveChangesEdit">Save changes</button>
            </div>
        </div>
    </div>
</div>
