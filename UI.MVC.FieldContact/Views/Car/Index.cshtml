<div class="row">
    <div class="col-md-12">
        <!-- BEGIN Portlet PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-green-sharp">
                    <i class="icon-speech font-green-sharp"></i>
                    <span class="caption-subject bold uppercase"> Şirket Araçları</span>
                    <span class="caption-helper">şirket araçları ekleme-çıkarma ve düzenleme sayfası...</span>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover" id="carList">
                    <thead>
                        <tr>
                            <th>Plaka</th>
                            <th>Marka-Model</th>
                            <th>Kontrat Bitiş Tarihi</th>
                            <th>Kontrat Bitiş Km</th>
                            <th>Güncel Km</th>
                            <th>İşlem </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
        <!-- END Portlet PORTLET-->
    </div>
</div>

<div id="responsive" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Kategori İşlem</h4>
            </div>
            <input type="hidden" id="id" />
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @*<label>Proje Adı</label>*@
                            <input id="name" type="text" class="form-control" placeholder="34XX0000">
                        </div>
                        <div class="form-group">

                            <input id="brand" type="text" class="form-control" placeholder="Marka-Model">
                        </div>
                        <div class="form-group">

                            <input id="actualKm" type="text" class="form-control" placeholder="Güncel Kilometresi">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn dark btn-outline">Close</button>
                <button type="button" class="btn green" id="saveChanges">Save changes</button>
            </div>
        </div>
    </div>
</div>